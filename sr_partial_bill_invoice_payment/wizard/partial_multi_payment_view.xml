<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="sr_partial_multi_payment_wizard_form_view">
        <field name="name">sr.partial.multi.payment.wizard.form.view</field>
        <field name="model">partial.multi.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Partial Multi Payment Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="partner_type" readonly="1" force_save="1"/>
                            <field name="payment_type" readonly="1" force_save="1"/>
                            <field name="move_type" invisible="1"/>
                        </group>
                    </group>
                    <separator string="Payment"/>
                    <group>
                        <group>
                            <field name="move_line_id"/>
                            <field name="move_id" invisible="1"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="amount_residual" force_save="1" readonly="1" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                            <field
                                name="amount_residual_currency"
                                widget="monetary"
                                readonly="1"
                                attrs="{'invisible': [('move_line_id', '=', False)]}"
                                force_save="1"
                            />
                        </group>
                        <group>
                            <field name="remain_amount" force_save="1" readonly="1" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                            <field
                                name="remain_amount_currency"
                                widget="monetary"
                                force_save="1"
                                readonly="1"
                                attrs="{'invisible': [('move_line_id', '=', False)]}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Move Lines">
                            <field name="move_line_ids" force_save="1" context="{'default_multi_partial_payment_id': id, 'default_partner_id': partner_id, 'default_payment_move_id': move_id, 'default_payment_currency_id': currency_id, 'default_move_type': move_type}">
                                <tree editable="bottom">
                                    <field name="multi_partial_payment_id" invisible="1"/>
                                    <field name="move_type" invisible="1"/>
                                    <field name="partner_id" invisible="1"/>
                                    <field name="payment_move_id" invisible="1"/>
                                    <field name="payment_currency_id" invisible="1"/>
                                    <field name="company_currency_id" invisible="1"/>
                                    <field name="move_id" domain="[('partner_id', '=', partner_id), ('move_type', '=', move_type)]"/>
                                    <field name="currency_id"/>
                                    <field name="amount_residual" readonly="1" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                    <field name="amount_residual_currency"/>
                                    <field name="amount_to_pay" readonly="1" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                    <field name="curr_amount_to_pay" widget="monetary" options="{'currency_field': 'payment_currency_id'}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="move_id"/>
                                                <field name="multi_partial_payment_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="partner_id" invisible="1"/>
                                                <field name="payment_move_id" invisible="1"/>
                                                <field name="payment_currency_id" invisible="1"/>
                                                <field name="company_currency_id" invisible="1"/>
                                                <field name="currency_id"/>
                                            </group>
                                        </group>
                                        <separator/>
                                        <group>
                                            <group>
                                                <field name="amount_residual" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                                <field name="amount_residual_currency" widget='monetary'/>
                                            </group>
                                            <group>
                                                <field name="amount_to_pay" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                                <field name="curr_amount_to_pay" widget="monetary" options="{'currency_field': 'payment_currency_id'}"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button
                        string="Register Payment"
                        name="sr_register_payment"
                        type="object"
                        class="oe_highlight pull-right"
                    />
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sr_partial_multi_payment_wizard_action_1" model="ir.actions.act_window">
        <field name="name">Payment Multi Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partial.multi.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sr_partial_multi_payment_wizard_form_view"/>
        <field name="target">new</field>
        <field name="context">{'default_partner_type': 'customer', 'default_payment_type': 'payin', 'default_move_type': 'out_invoice'}</field>
    </record>

    <record id="sr_partial_multi_payment_wizard_action_2" model="ir.actions.act_window">
        <field name="name">Payment Multi Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partial.multi.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sr_partial_multi_payment_wizard_form_view"/>
        <field name="target">new</field>
        <field name="context">{'default_partner_type': 'supplier', 'default_payment_type': 'payout', 'default_move_type': 'in_invoice'}</field>
    </record>

    <menuitem
        id="sr_partial_multi_invoice_payment_wizard_menu"
        name="Partial Payment"
        parent="account.menu_finance_receivables"
        sequence="16"
        action="sr_partial_bill_invoice_payment.sr_partial_multi_payment_wizard_action_1"/>
    <menuitem
        id="sr_partial_multi_bill_payment_wizard_menu"
        name="Partial Payment"
        parent="account.menu_finance_payables"
        sequence="16"
        action="sr_partial_bill_invoice_payment.sr_partial_multi_payment_wizard_action_2"/>
</odoo>